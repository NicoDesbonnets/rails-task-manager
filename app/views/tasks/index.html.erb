<h1>My Tasks</h1>
<% @tasks.each do |task| %>
  <div class="task">
    <% if task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <p><%=link_to task.title, task_path(task)%></p>
    <%= link_to destroy_path(task), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  </div>
<% end %>
<div class="add">
  <i class="fas fa-plus-square"></i>
  <%=link_to "Create a new task", tasks_new_path%></p>
</div>
